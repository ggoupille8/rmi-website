---
import '../styles/global.css';
import Navbar from '../components/landing/Navbar.astro';
import { companyName, companyNameFull, email, phone, phoneE164, address, services, siteTitle, siteDescription } from '../content/site';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  canonical?: string;
  keywords?: string;
  author?: string;
}

const {
  title = siteTitle,
  description = siteDescription,
  ogImage = '/og-image.jpg',
  ogType = 'website',
  canonical = Astro.url.href,
  keywords = 'mechanical insulation, insulation contractor, Romulus MI, Michigan, piping insulation, ductwork insulation, tank insulation, cryogenic insulation, boiler insulation, turbine insulation, insulation materials, pipe supports, industrial insulation, commercial insulation',
  author = companyName,
} = Astro.props;

const fullTitle = title.includes(companyName) ? title : `${title} | ${companyName}`;
const siteUrl = Astro.site?.href || 'https://resourcemechanicalinsulation.com';
const ogImageUrl = new URL(ogImage, siteUrl).href;

const localBusinessSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": `${siteUrl}#business`,
  "name": companyNameFull,
  "description": description,
  "url": siteUrl,
  "telephone": phoneE164,
  "email": email,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": address.street,
    "addressLocality": address.city,
    "addressRegion": address.state,
    "postalCode": address.zip,
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 42.2223,
    "longitude": -83.3630
  },
  "areaServed": {
    "@type": "State",
    "name": "Michigan"
  },
  "priceRange": "$$",
  "image": ogImageUrl,
  "knowsAbout": services.map(s => s.title),
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Mechanical Insulation Services",
    "itemListElement": services.map((s, i) => ({
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": s.title,
        "description": s.description
      },
      "position": i + 1
    }))
  }
});
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={fullTitle} />
    <meta property="og:site_name" content={companyName} />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonical} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:image:alt" content={fullTitle} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonical} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#1e3a5f" />
    <meta name="msapplication-TileColor" content="#1e3a5f" />
    
    <!-- Google Fonts - Russo One -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Russo+One&display=swap" rel="stylesheet" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={localBusinessSchema} />
  </head>
  <body class="h-full">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary-600 focus:text-white focus:rounded-md focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-600">
      Skip to main content
    </a>
    <Navbar />
    <main id="main-content">
      <slot />
    </main>
  </body>
</html>

