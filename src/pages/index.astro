---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/landing/Hero';
import Services from '../components/landing/Services';
import WhoWeServe from '../components/landing/WhoWeServe';
import DualTrack from '../components/landing/DualTrack';
import Process from '../components/landing/Process';
import Differentiators from '../components/landing/Differentiators';
import FAQ from '../components/landing/FAQ';
import ContactForm from '../components/landing/ContactForm';
import Footer from '../components/landing/Footer';
---

<BaseLayout 
  title="Resource Mechanical Insulation - Expert Insulation Services | Romulus, MI" 
  description="Union contractor Local 25 serving Southeast Michigan and the Midwest. Professional mechanical insulation for piping, ductwork, tanks, and equipment. Hot, cold, and cryogenic applications. Based in Romulus, MI."
  canonical="https://resourcemechanicalinsulation.com/"
>
  <main>
    <Hero
      headline="Expert Mechanical Insulation Solutions"
      subheadline="Union contractor Local 25 serving Southeast Michigan and the Midwest. Professional insulation for piping, ductwork, tanks, and equipment. Hot, cold, and cryogenic applications."
      ctaPrimary={{ text: 'Request a Quote', href: '#contact' }}
      ctaSecondary={{ text: 'Call Now', href: 'tel:+1234567890' }}
    />
    <div id="services">
      <Services />
    </div>
    <WhoWeServe />
    <DualTrack />
    <Process />
    <Differentiators />
    <div id="faq">
      <FAQ />
    </div>
    <div id="contact">
      <ContactForm />
    </div>
    <Footer />
  </main>
</BaseLayout>

