---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroFullWidth from '../components/landing/HeroFullWidth';
import Services from '../components/landing/Services';
import About from '../components/landing/About';
import MaterialsMarquee from '../components/landing/MaterialsMarquee';
import CTABanner from '../components/landing/CTABanner';
import ContactForm from '../components/landing/ContactForm';
import Footer from '../components/landing/Footer';
import FloatingMobileCTA from '../components/landing/FloatingMobileCTA';
import { heroHeadline } from '../content/site';
---

<BaseLayout
  title="Resource Mechanical Insulation | Industrial Insulation Contractors Michigan"
  description="Professional mechanical insulation for piping, ductwork, tanks, and equipment. Hot, cold, and cryogenic applications. Serving Michigan from Romulus, MI."
  canonical="https://resourcemechanicalinsulation.com/"
>
  <div>
    <HeroFullWidth
      client:load
      headline={heroHeadline}
      tagline="Commercial & Industrial Insulation Experts"
      backgroundImage="/images/hero/hero-1.jpg"
    />
    <div id="services" class="scroll-mt-20">
      <Services />
    </div>
    <div id="about" class="scroll-mt-20">
      <About />
    </div>
    <MaterialsMarquee />
    <CTABanner />
    <div id="contact" class="scroll-mt-20">
      <ContactForm client:load />
    </div>
    <Footer />
    <FloatingMobileCTA client:load />
  </div>
</BaseLayout>
